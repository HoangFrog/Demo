@{
    //load file Layout2.cshtml vào đây
    Layout = "~/Views/Shared/LayoutSub.cshtml";
}
<div class="container">

    <div class="row" style="margin-top:50px;margin-bottom: 150px;">
        <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12 col-md-offset-3">
            @*đăng ký tài khoản thành công thì hiển thị thông tin bên dưới*@
            @if (!String.IsNullOrEmpty(Context.Request.Query["notify"]) && Context.Request.Query["notify"] == "register-success")
            {
                <div class="alert alert-success">Đăng ký tài khoản thành công, xin mời đăng nhập</div>
            }
            @if (!String.IsNullOrEmpty(Context.Request.Query["notify"]) && Context.Request.Query["notify"] == "login-invalid")
            {
                <div class="alert alert-danger">Đăng nhập không thành công</div>
            }
            <div class=" main-content-area">
                <div class="wrap-login-item ">
                    <div class="login-form form-item form-stl">
                        <form name="frm-login" method="post" autocomplete="off" action="/Account/LoginPost">
                           
                            <fieldset style="margin-bottom: 20px; class="wrap-title">
                                <h3 style=" font-size: 24px;margin-bottom: 30px;border-bottom: 1px solid #ddd;line-height: 57px;margin-top: -9px;" class="form-title">Log in to your account</h3>
                            </fieldset>
                            <fieldset style="margin-bottom: 20px; class="wrap-input">
                                <label style="display: inline-block;margin-bottom: 5px;font-weight: bold;line-height: 19px;margin: 10px 0;font-weight: 400;" for="frm-login-uname">Email Address:</label>
                                <input style="border: 1px solid #e6e6e6;outline: none;width: 100%;height: 43px;font-size: 13px;line-height: 19px;padding: 0 5px 0 14px;" type="text" id="frm-login-uname" name="email" placeholder="Type your email address">
                            </fieldset>
                            <fieldset style="margin-bottom: 20px; class="wrap-input">
                                <label style="display: inline-block;margin-bottom: 5px;font-weight: bold;line-height: 19px;margin: 10px 0;font-weight: 400;" for="frm-login-pass">Password:</label>
                                <input style="border: 1px solid #e6e6e6;outline: none;width: 100%;height: 43px;font-size: 13px;line-height: 19px;padding: 0 5px 0 14px;" type="password" id="frm-login-pass" name="password" placeholder="************">
                            </fieldset>
                            <input style="font-size: 14px;background-color:#FE980F;color: white;line-height: 19px;border: none;border-radius: 0;padding: 8px;min-width: 119px;text-align: center;margin-top: 28px;-webkit-transition: background 0.3s ease 0s;-o-transition: background 0.3s ease 0s;-moz-transition: background 0.3s ease 0s;transition: background 0.3s ease 0s;" type="submit" class="btn btn-submit" value="Login" name="submit">
                        </form>
                    </div>
                </div>
            </div><!--end main products area-->
        </div>
    </div><!--end row-->

</div><!--end container-->