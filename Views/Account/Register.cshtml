@{
    //load file Layout2.cshtml vào đây
    Layout = "~/Views/Shared/LayoutSub.cshtml";
}
<div class="container">

    <div class="row" style="margin-top:50px;">
        <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12 col-md-offset-3">
            @if (!String.IsNullOrEmpty(Context.Request.Query["notify"]) && Context.Request.Query["notify"] == "exists")
            {
                    <div class="alert alert-danger">Email đã tồn tại!</div>
            }
            @if (!String.IsNullOrEmpty(Context.Request.Query["notify"]) && Context.Request.Query["notify"] == "success")
            {
                <div class="alert alert-danger">Đăng kí thành công</div>
            }
            <div class=" main-content-area">
                <div class="wrap-login-item ">
                    <div class="register-form form-item ">
                        <form class="form-stl" action="/Account/RegisterPost" name="frm-login" method="post" style="border: 1px solid #e6e6e6;padding: 40px 20px;box-shadow: 0 4px 6px -1px rgba(0,0,0,.1), 0 2px 4px -1px rgba(0,0,0,.06);border-radius: 0.5rem;">
                            <fieldset style="margin-bottom: 20px;" class="wrap-title">
                                <h3 style=" font-size: 24px;margin-bottom: 30px;border-bottom: 1px solid #ddd;line-height: 57px;margin-top: -9px;" class="form-title">
                                    Create an account
                                </h3>
                                <h4 style="color: #666;" class="form-subtitle">
                                    Personal infomation
                                </h4>
                            </fieldset>
                            <fieldset style ="margin-bottom: 20px; class="wrap-input">
                                <label style="display: inline-block;margin-bottom: 5px;font-weight: bold;line-height: 19px;margin: 10px 0;font-weight: 400;" for="frm-reg-email">Email Address*</label>
                                <br />
                                <input style="border: 1px solid #e6e6e6;outline: none;width: 100%;height: 43px;font-size: 13px;line-height: 19px;padding: 0 5px 0 14px;" type="email" id="frm-reg-email" name="email" required placeholder="Input your Email address">
                            </fieldsetstyle>
                                <fieldset style="margin-bottom: 20px; class="wrap-input">
                                <label style="display: inline-block;margin-bottom: 5px;font-weight: bold;line-height: 19px;margin: 10px 0;font-weight: 400;" for="frm-reg-password">Password*</label>
                                <br />
                                <input style="border: 1px solid #e6e6e6;outline: none;width: 100%;height: 43px;font-size: 13px;line-height: 19px;padding: 0 5px 0 14px;" type="password" id="frm-reg-password" name="password" required placeholder="Input your Password">
                            </fieldset>
                                <fieldset style="margin-bottom: 20px; class="wrap-input">
                                <label style="display: inline-block;margin-bottom: 5px;font-weight: bold;line-height: 19px;margin: 10px 0;font-weight: 400;" for="frm-reg-lname">Name*</label>
                                <br />
                                <input style="border: 1px solid #e6e6e6;outline: none;width: 100%;height: 43px;font-size: 13px;line-height: 19px;padding: 0 5px 0 14px;" type="text" id="frm-reg-lname" name="name" required placeholder="Input your Name*">
                            </fieldset>
                                <fieldset style="margin-bottom: 20px; class="wrap-input">
                                <label style="display: inline-block;margin-bottom: 5px;font-weight: bold;line-height: 19px;margin: 10px 0;font-weight: 400;" for="frm-reg-lphone">Phone*</label>
                                <br />
                                <input style="border: 1px solid #e6e6e6;outline: none;width: 100%;height: 43px;font-size: 13px;line-height: 19px;padding: 0 5px 0 14px;" type="text" id="frm-reg-lphone" name="phone" required placeholder="Input your Phone*">
                            </fieldset>
                                <fieldset style="margin-bottom: 20px; class="wrap-input">
                                <label style="display: inline-block;margin-bottom: 5px;font-weight: bold;line-height: 19px;margin: 10px 0;font-weight: 400;" for="frm-reg-address">Address*</label>
                                <br />
                                <input style="border: 1px solid #e6e6e6;outline: none;width: 100%;height: 43px;font-size: 13px;line-height: 19px;padding: 0 5px 0 14px;" type="text" id="frm-reg-address" name="address" required placeholder="Input your Address">
                            </fieldset>
                                <input style="font-size: 14px;background-color:#FE980F;color: white;line-height: 19px;border: none;border-radius: 0;padding: 8px;min-width: 119px;text-align: center;margin-top: 28px;-webkit-transition: background 0.3s ease 0s;-o-transition: background 0.3s ease 0s;-moz-transition: background 0.3s ease 0s;transition: background 0.3s ease 0s;" type="submit" class="btn btn-sign" value="Register" name="register">
                        </form>
                    </div>
                </div>
            </div><!--end main products area-->
        </div>
    </div><!--end row-->

</div><!--end container-->

